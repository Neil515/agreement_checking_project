{
  "manifest_version": 3,
  "name": "AI 條文風險分析工具",
  "version": "0.1",
  "description": "擷取條文並顯示風險分析進度",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_title": "AI 條文風險分析",
    "default_popup": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
